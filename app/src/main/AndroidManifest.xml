<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.programminSimplified.firebaseproject">

    <application
        android:name="com.programminSimplified.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseProject"
        tools:targetApi="31">
        <activity android:name=".features.fiebaseauth.activity.RealtimeDatabaseActivity"/>
        <activity android:name="com.programminSimplified.firebaseproject.features.firestoredb.FirestoreActivity"/>
        <activity
            android:name="com.programminSimplified.firebaseproject.features.fiebaseauth.activity.AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FirebaseProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>